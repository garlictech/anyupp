{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictTemplates": true
  },
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "types/*"],
      "@bgap/api/graphql/resolvers": [
        "libs/api/graphql/resolvers/src/index.ts"
      ],
      "@bgap/api/graphql/schema": ["libs/api/graphql/schema/src/index.ts"],
      "@bgap/shared/types": ["libs/shared/types/src/index.ts"],
      "@bgap/shared/config": ["libs/shared/config/src/index.ts"],
      "@bgap/api/data-access": ["libs/api/data-access/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", "artifacts"]
}
