{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@bgap/api/graphql/resolvers": [
        "libs/api/graphql/resolvers/src/index.ts"
      ],
      "@bgap/api/graphql/schema": ["libs/api/graphql/schema/src/index.ts"],
      "@bgap/shared/types": ["libs/shared/types/src/index.ts"],
      "@bgap/shared/config": ["libs/shared/config/src/index.ts"],
      "@bgap/api/data-access": ["libs/api/data-access/src/index.ts"],
      "@bgap/admin/pages/admin-users": [
        "libs/admin/pages/admin-users/src/index.ts"
      ],
      "@bgap/admin/shared/forms": ["libs/admin/shared/forms/src/index.ts"],
      "@bgap/admin/shared/components": [
        "libs/admin/shared/components/src/index.ts"
      ],
      "@bgap/admin/shared/pipes": ["libs/admin/shared/pipes/src/index.ts"],
      "@bgap/admin/shared/utils": ["libs/admin/shared/utils/src/index.ts"],
      "@bgap/admin/shared/data": ["libs/admin/shared/data/src/index.ts"],
      "@bgap/admin/shared/auth": ["libs/admin/shared/auth/src/index.ts"],
      "@bgap/admin/ui/core": ["libs/admin/ui/core/src/index.ts"],
      "@bgap/admin/ui/theme": ["libs/admin/ui/theme/src/index.ts"],
      "@bgap/admin/pages/chains": ["libs/admin/pages/chains/src/index.ts"],
      "@bgap/admin/pages/groups": ["libs/admin/pages/groups/src/index.ts"],
      "@bgap/admin/pages/units": ["libs/admin/pages/units/src/index.ts"],
      "@bgap/admin/pages/users": ["libs/admin/pages/users/src/index.ts"],
      "@bgap/admin/pages/products": ["libs/admin/pages/products/src/index.ts"],
      "@bgap/admin/pages/product-categories": [
        "libs/admin/pages/product-categories/src/index.ts"
      ],
      "@bgap/admin/pages/dashboard": [
        "libs/admin/pages/dashboard/src/index.ts"
      ],
      "@bgap/admin/pages/auth": ["libs/admin/pages/auth/src/index.ts"],
      "@bgap/admin/shared/config": ["libs/admin/shared/config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
