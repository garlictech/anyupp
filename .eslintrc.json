{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["unused-imports", "@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": ["angular-anyupp", "nodejs-shared"],
            "depConstraints": [
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": ["scope:shared"]
              },
              {
                "sourceTag": "scope:anyupp",
                "onlyDependOnLibsWithTags": ["scope:shared", "scope:anyupp"]
              },
              {
                "sourceTag": "platform:universal",
                "onlyDependOnLibsWithTags": ["platform:universal"]
              },
              {
                "sourceTag": "platform:angular",
                "onlyDependOnLibsWithTags": [
                  "platform:universal",
                  "platform:angular"
                ]
              },
              {
                "sourceTag": "platform:ionic",
                "onlyDependOnLibsWithTags": [
                  "platform:universal",
                  "platform:angular",
                  "platform:ionic"
                ]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:ui", "type:utils"]
              },
              {
                "sourceTag": "type:data-access",
                "onlyDependOnLibsWithTags": ["type:data-access", "type:utils"]
              },
              {
                "sourceTag": "type:utils",
                "onlyDependOnLibsWithTags": ["type:utils"]
              },
              {
                "sourceTag": "type:feature",
                "onlyDependOnLibsWithTags": ["type:utils"]
              },
              {
                "sourceTag": "type:server",
                "onlyDependOnLibsWithTags": ["type:feature", "type:utils"]
              }
            ]
          }
        ],
        "unused-imports/no-unused-imports-ts": "error"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "parserOptions": { "project": "./tsconfig.*?.json" },
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
