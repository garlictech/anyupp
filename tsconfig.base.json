{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "strictInjectionParameters": true,
    "strictTemplates": true
  },
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/out",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "removeComments": true,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "target": "es2020",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "types/*"],
      "@bgap/admin/refactor": ["libs/admin/refactor/src/index.ts"],
      "@bgap/anyupp-backend-lib": ["libs/anyupp-backend-lib/src/index.ts"],
      "@bgap/anyupp-gql/backend": ["libs/anyupp-gql/backend/src/index.ts"],
      "@bgap/anyupp-schema": ["libs/anyupp-schema/src/index.ts"],
      "@bgap/api/data-access": ["libs/api/data-access/src/index.ts"],
      "@bgap/apps/admin": ["libs/apps/admin/src/index.ts"],
      "@bgap/apps/backend-anyupp": ["libs/apps/backend-anyupp/src/index.ts"],
      "@bgap/apps/shared": ["libs/apps/shared/src/index.ts"],
      "@bgap/backend/orders": ["libs/backend/orders/src/index.ts"],
      "@bgap/backend/product-categories": [
        "libs/backend/product-categories/src/index.ts"
      ],
      "@bgap/backend/products": ["libs/backend/products/src/index.ts"],
      "@bgap/backend/reports": ["libs/backend/reports/src/index.ts"],
      "@bgap/backend/search": ["libs/backend/search/src/index.ts"],
      "@bgap/backend/seeder": ["libs/backend/seeder/src/index.ts"],
      "@bgap/backend/shared/utils": ["libs/backend/shared/utils/src/index.ts"],
      "@bgap/backend/units": ["libs/backend/units/src/index.ts"],
      "@bgap/crud-gql/api": ["libs/crud-gql/api/src/index.ts"],
      "@bgap/crud-gql/backend": ["libs/crud-gql/backend/src/index.ts"],
      "@bgap/data": ["libs/data/src/index.ts"],
      "@bgap/domain": ["libs/domain/src/index.ts"],
      "@bgap/firebase-api": ["libs/firebase-api/src/index.ts"],
      "@bgap/gql-sdk": ["libs/gql-sdk/src/index.ts"],
      "@bgap/integration-tests/angular": [
        "libs/integration-tests/angular/src/index.ts"
      ],
      "@bgap/integration-tests/universal": [
        "libs/integration-tests/universal/src/index.ts"
      ],
      "@bgap/rkeeper-api": ["libs/rkeeper-api/src/index.ts"],
      "@bgap/shared/config": ["libs/shared/config/src/index.ts"],
      "@bgap/shared/data-validators": [
        "libs/shared/data-validators/src/index.ts"
      ],
      "@bgap/shared/fixtures": ["libs/shared/fixtures/src/index.ts"],
      "@bgap/shared/graphql/api-client": [
        "libs/shared/graphql/api-client/src/index.ts"
      ],
      "@bgap/shared/types": ["libs/shared/types/src/index.ts"],
      "@bgap/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@bgap/stripe": ["libs/stripe/src/index.ts"],
      "crypto": ["node_modules/crypto-js"]
    }
  },
  "exclude": [
    "node_modules",
    "tmp",
    "dist",
    "artifacts",
    ".git",
    "cyreport",
    "coverage"
  ]
}
